<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/composite6"
    android:gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:id="@+id/llMain"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="7"
    >
    
    
        <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/llTitleArea"
	    android:gravity="center"
	    android:layout_gravity="center_horizontal|top"
	    android:layout_weight="9"
	    >
	
	  		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/innericon"
		    android:layout_gravity="center"
		    android:id="@+id/iInnerIcon"
		    android:layout_weight="1"
		    android:padding="5dp"
		    />
	  		
	  		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/bullets"
		    android:layout_gravity="center"
		    android:id="@+id/iBullets"
		    android:layout_weight="1"
		    android:padding="5dp"
		    />
	    
	    </LinearLayout>
	    
        <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/llSubTitleArea"
	    android:gravity="top"
	    android:layout_gravity="left|top"
	    android:layout_weight="1"
	    android:weightSum="4"
	    >
	    
    
			<TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/m_before_you_start"
		    android:layout_gravity="left"
		    style="@style/h2"
		    android:layout_weight="1"
		    />
		    
	   		<TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="@string/m_foreword"
		    style="@style/p2b"
		    android:layout_weight="2"
		    />
		    
		    
	        <LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/llNotYetAgreedArea"
		    android:gravity="right|center_vertical"
		    android:layout_gravity="right|center_vertical"
		    android:paddingTop="10dp"
		    android:layout_weight="1"
		    >
		
	       		<TextView  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:text="@string/m_should_agree_to_proceed"
			    android:id="@+id/tvMessage"
			    style="@style/p2"
			    android:paddingTop="5dp"
	    	    android:layout_weight="2"
			    />
	       		
				<TextView  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    style="@style/b1la"
			    android:text="@string/m_read_disclaimer"
	   		    android:id="@+id/btnAgree"
	   		    android:layout_weight="1"
			    />
		    
		    </LinearLayout>
		    
	        <LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/llAlreadyAgreedArea"
		    android:gravity="center_vertical|right"
		    android:layout_gravity="center_vertical|right"
		    android:paddingTop="10dp"
		    android:visibility="gone"
		    android:layout_weight="1"
		    >			    
		    
	       		<TextView  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:text="@string/m_wish_to_read_again"
			    android:id="@+id/tvReadAgain"
			    style="@style/p2"
			    android:paddingTop="5dp"
	    	    android:layout_weight="2"
			    />
	       		
				<TextView  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    style="@style/b1la"
			    android:text="@string/m_start"
			    android:id="@+id/btnStart"
			    android:layout_weight="1"
			    />
				    
	
		    
		    </LinearLayout>
	    
		</LinearLayout>
    
    </LinearLayout>
    
    
    
</LinearLayout>
